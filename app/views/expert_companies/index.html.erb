<h1>Listing expert_companies</h1>

<table>
  <tr>
    <th>Companyname</th>
    <th>Jobtitle</th>
    <th>Country</th>
    <th>Business</th>
    <th>Noemplyees</th>
    <th>Hearaboutus</th>
  </tr>

<% @expert_companies.each do |expert_company| %>
  <tr>
    <td><%=h expert_company.companyname %></td>
    <td><%=h expert_company.jobtitle %></td>
    <td><%=h expert_company.country %></td>
    <td><%=h expert_company.business %></td>
    <td><%=h expert_company.noemplyees %></td>
    <td><%=h expert_company.hearaboutus %></td>
    <td><%= link_to 'Show', expert_company %></td>
    <td><%= link_to 'Edit', edit_expert_company_path(expert_company) %></td>
    <td><%= link_to 'Destroy', expert_company, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

