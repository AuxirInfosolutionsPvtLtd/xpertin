              <!--<tr>
                <td><label for="form00-01">Your name<span class="color-red">*</span> </label></td>
                <td><input type="text" id="form00-01" value="" /></td>
              </tr> -->
              <tr>
                <td><label for="form00-02">Username<span class="color-red">*</span> </label></td>
                <td><%= f.text_field :login , :id => "form00-01" %></td>
              </tr>
			  <tr>
